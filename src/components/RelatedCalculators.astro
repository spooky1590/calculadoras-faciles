---
import type { Calculator } from '../utils/getRelatedCalculators';

interface Props {
  calculators: Calculator[];
}

const { calculators } = Astro.props;

// Only show if we have at least one related calculator
if (calculators.length === 0) return null;
---

<section class="mt-12">
  <h2 class="text-2xl font-bold mb-6">Calculadoras Relacionadas</h2>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {calculators.map(calc => (
      <a 
        href={calc.href}
        class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow"
      >
        <h3 class="text-xl font-semibold text-gray-900 mb-2">{calc.title}</h3>
        <p class="text-gray-600 line-clamp-2">{calc.description}</p>
      </a>
    ))}
  </div>
</section>