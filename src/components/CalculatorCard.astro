---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<a href={href} class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <h2 class="text-xl font-semibold text-gray-900 mb-2">{title}</h2>
  <p class="text-gray-600">{description}</p>
</a>